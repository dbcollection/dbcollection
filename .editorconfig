root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

[*.{py,rst,ini}]
indent_style = space
indent_size = 4
line_length = 100

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
